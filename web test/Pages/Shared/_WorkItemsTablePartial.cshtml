

<table class="table table-bordered table-hover" id="workItemsTable">
    <thead>
        <tr class="custom-header">
            <th>№</th>
            <th>Наименование документа</th>
            <th>Наименование работы</th>
            <th>Исполнители</th>
            <th>Контролирующий</th>
            <th>Принимающий</th>
            <th>План</th>
            <th>Корр1</th>
            <th>Корр2</th>
            <th>Корр3</th>
            <th>
                <span class="toggle-all-btn" title="Выделить/снять все">
                    📌
                </span>
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int rowCounter = 1; // Добавляем счетчик
        }
        @foreach (var item in Model.WorkItems)
        {
            // Если где-то в OnGet прописать item.HighlightCssClass,
            // он отразится тут, например table-warning / table-info
            string highlightClass = item.HighlightCssClass ?? "";

            // Проверяем, является ли UserName исполнителем
            bool canSendRequest = false;
            @if (!string.IsNullOrEmpty(Model.UserName) && !string.IsNullOrEmpty(item.Executor))
            {
                string execStr = (string)item.Executor;
                string[] parts = execStr.Split(',', StringSplitOptions.RemoveEmptyEntries);
                var exList = parts.Select(x => x.Trim());

                canSendRequest = exList.Contains((string)Model.UserName);
            }

            <tr data-id="@item.DocumentNumber" class="@highlightClass">
                <td>@rowCounter</td>
                <td>@item.DocumentName</td>
                <td>@item.WorkName</td>
                <td>@Html.Raw(item.Executor?.Replace(", ", "<br>"))</td>
                <td>@item.Controller</td>
                <td>@item.Approver</td>
                <td>@item.PlanDate?.ToShortDateString()</td>
                <td>@item.Korrect1?.ToShortDateString()</td>
                <td>@item.Korrect2?.ToShortDateString()</td>
                <td>@item.Korrect3?.ToShortDateString()</td>
                <td class="align-middle">
                    <!-- Чекбокс для PDF -->
                    <input type="checkbox" class="row-select"/>
                    <!-- Иконка для сортировки -->
                    <span class="drag-handle">&#x2630;</span>

                    <!-- Кнопка "Запрос" -->
                    @if (canSendRequest)
                    {
                        <button type="button" class="btn btn-sm btn-outline-secondary ms-2"
                                onclick="openRequestModal('@item.DocumentNumber', '@item.Controller', '@item.Approver')">
                            📝
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-sm btn-outline-secondary ms-2" disabled>
                            📝
                        </button>
                    }
                </td>
            </tr>
            rowCounter++; // Увеличиваем счетчик
        }
    </tbody>
</table>

<style>
    .custom-header th {
        background: linear-gradient(145deg, #2c3e50, #34495e);
        color: white;
        font-weight: 500;
        border-bottom: 2px solid #1a252f;
        transition: all 0.3s ease;
        padding: 15px;
        position: relative;
    }

        .custom-header th:hover {
            background: linear-gradient(145deg, #34495e, #2c3e50);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .custom-header th::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            height: 60%;
            width: 1px;
            background: rgba(255,255,255,0.1);
        }

        .custom-header th:last-child::after {
            display: none;
        }

    .toggle-all-btn {
        cursor: pointer;
        transition: transform 0.3s ease;
        display: inline-block;
        padding: 5px;
    }

        .toggle-all-btn:hover {
            transform: rotate(90deg);
            color: #ecf0f1;
        }
</style>