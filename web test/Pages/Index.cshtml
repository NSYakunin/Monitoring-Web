                    `;

                    tr.innerHTML = `
                        <td>${req.documentName || ""}</td>
                        <td>${req.workName || ""}</td>
                        <td>${req.executor || ""}</td>
                        <td>${req.controller || ""}</td>
                        <td>${req.approver || ""}</td>
                        <td>${req.planDate || ""}</td>
                        <td>${req.korrect1 || ""}</td>
                        <td>${req.korrect2 || ""}</td>
                        <td>${req.korrect3 || ""}</td>
                        <td>${req.requestType || ""}</td>
                        <td>${req.proposedDate || ""}</td>
                        <td>${req.sender || ""}</td>
                        <td>${req.note || ""}</td>
                        <td>${actionTd}</td>
                    `;
                    tbody.appendChild(tr);
                });
            })
            .catch(e => console.error(e));
        }

        // "Принять"/"Отклонить" во входящих заявках
        function setRequestStatus(requestId, docNumber, newStatus) {
            let bodyData = {
                RequestId: requestId,
                DocumentNumber: docNumber,
                NewStatus: newStatus
            };
            fetch('@Url.Page("Index", "SetRequestStatus")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(bodyData)
            })
            .then(r => r.json())
            .then(res => {
                if (res.success) {
                    alert("Статус обновлён: " + newStatus);
                    loadMyPendingRequests();
                } else {
                    alert("Ошибка: " + res.message);
                }
            })
            .catch(e => console.error(e));
        }

        // Обновление кэша
        function refreshCache() {
            let btn = document.getElementById('refreshCacheBtn');
            let originalText = btn.innerHTML;

            btn.disabled = true;
            btn.innerHTML = "Обновляю...";

            fetch('@Url.Page("Index", "RefreshCache")', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(res => {
                if (res.success) {
                    let countdown = 5;
                    let timerId = setInterval(() => {
                        countdown--;
                        btn.innerHTML = `Ожидайте ${countdown}c`;
                        if (countdown <= 0) {
                            clearInterval(timerId);
                            location.reload();
                        }
                    }, 1000);
                } else {
                    alert("Ошибка при очистке кэша: " + res.message);
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            })
            .catch(error => {
                console.error(error);
                alert("Ошибка сети при обновлении кэша");
                btn.innerHTML = originalText;
                btn.disabled = false;
            });
        }

        // Установка формата (pdf/excel/word) и сабмит формы
        function setFormat(fmt) {
            const spinner = document.querySelector('#generatePdfBtn .spinner-border');
            spinner.style.display = 'inline-block';
            document.getElementById('formatInput').value = fmt;

            setTimeout(() => {
                spinner.style.display = 'none';
            }, 3000);

            document.getElementById('exportForm').submit();
        }
    </script>
