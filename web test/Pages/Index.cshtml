    <script>
        // ==============================
        // Глобальные переменные для &laquo;выбора строк&raquo; и &laquo;режима автоселекции&raquo;
        // ==============================
        // Если пользователь сам не проставляет галочки, мы считаем, что выбрано ВСЁ (автоселекция).
        let isAutoSelectAll = true;
        // В этом множестве храним выбранные документ-номера, если пользователь в ручном режиме
        let selectedDocs = new Set();
        // Флаг для Drag & Drop (перетаскивание строк)
        let isDragging = false;

        // Функция инициализации сортировки (Drag & Drop) и обработки клика/чекбоксов
        function initSortableTable() {
            var $tableBody = $("#workItemsTable tbody");

            // Функция для переиндексации в столбце "№" (локально, при перетаскивании)
            function reindexRows() {
                $tableBody.find("tr").each(function(index, row) {
                    // Просто локальное изменение отображения (1, 2, 3...)
                    $(row).find(".row-index").text(index + 1);
                });
            }

            // Подключаем jQuery-UI Sortable
            $tableBody.sortable({
                axis: "y",
                cursor: "move",
                start: function(event, ui) {
                    isDragging = true;
                    ui.item.find('.row-select').prop('checked', true).trigger('change');
                },
                stop: function(event, ui) {
                    setTimeout(() => {
                        isDragging = false;
                    }, 50);
                },
                update: function(event, ui) {
                    reindexRows();
                }
            });
            $tableBody.disableSelection();

            // При изменении конкретного чекбокса
            $('#workItemsTable').off('change', '.row-select').on('change', '.row-select', function() {
                let row = $(this).closest('tr');
                let docId = row.data('id');
                handleRowSelection(docId, this.checked, row);
            });

            // Клик по строке (если не кликали на кнопку/ссылку/чекбокс)
            $tableBody.off('click', 'tr').on('click', 'tr', function(e) {
                if (isDragging) return;  // если сейчас идёт перетаскивание
                if ($(e.target).is('button, a, .btn, input')) return;  // пропускаем клики на кнопках
                let checkbox = $(this).find('.row-select');
                let checked = !checkbox.prop('checked');
                checkbox.prop('checked', checked).trigger('change');
            });

            // Кнопка "Выделить/снять все" (на текущей странице)
            $('.toggle-all-btn').off('click').on('click', function() {
                let allChecks = $('#workItemsTable .row-select');
                // Если хотя бы один не проставлен, значит будем включать все
                let anyUnchecked = allChecks.filter(':not(:checked)').length > 0;
                allChecks.prop('checked', anyUnchecked).trigger('change');
            });
        }

        // Универсальная функция для обработки выбора/снятия галочки
        function handleRowSelection(docId, checked, $row) {
            // Если пользователь ставит галку, переходим в &laquo;ручной выбор&raquo;, если были в автоселекции.
            if (checked) {
                $row.addClass('selected-row');
                if (isAutoSelectAll) {
                    // переключаемся из режима "авто" в режим "ручной"
                    isAutoSelectAll = false;
                    selectedDocs.clear(); // сначала очищаем множество
                }
                selectedDocs.add(docId);
            } else {
                $row.removeClass('selected-row');
                // Если мы уже в ручном режиме, то убираем документ из множества
                if (!isAutoSelectAll) {
                    selectedDocs.delete(docId);
                    // Если множество стало пустым, возвращаемся к автоселекции = всё
                    if (selectedDocs.size === 0) {
                        isAutoSelectAll = true;
                    }
                }
            }
        }

        // После любой AJAX-подгрузки таблицы нужно &laquo;восстановить&raquo; состояние чекбоксов
        function restoreSelection() {
            let rows = document.querySelectorAll("#workItemsTable tbody tr");
            rows.forEach(row => {
                let docId = row.getAttribute("data-id");
                let checkbox = row.querySelector(".row-select");

                if (isAutoSelectAll) {
                    // Режим &laquo;всё выбрано по умолчанию&raquo;, но фактически чекбокс не ставим
                    // (так мы различаем ручной выбор от &laquo;всё&raquo;)
                    checkbox.checked = false;
                    row.classList.remove("selected-row");
                } else {
                    // Ручной режим: если docId в selectedDocs, ставим галочку
                    if (selectedDocs.has(docId)) {
                        checkbox.checked = true;
                        row.classList.add("selected-row");
                    } else {
                        checkbox.checked = false;
                        row.classList.remove("selected-row");
                    }
                }
            });
        }

        // AJAX-фильтр при изменении параметров
        function doAjaxFilter() {
            $.ajax({
                url: '@Url.Page("Index", "Filter")',
                type: 'GET',
                data: {
                    startDate: $('#startDate').val(),
                    endDate: $('#endDate').val(),
                    executor: $('#executor').val(),
                    approver: $('#approver').val(),
                    searchQuery: $('#search').val(),
                    selectedDivision: $('#divisionSelect').val(),
                    useAllDivisions: $('#allDivisionsChk').is(':checked'),
                    currentPage: $('#CurrentPage').val()
                },
                success: function(result) {
                    // Обновляем partial
                    $('#workItemsTableContainer').html(result);
                    initSortableTable();
                    // Важно: после перезагрузки таблицы – восстановить состояние выбора
                    restoreSelection();

                    // Сохраняем поля в скрытые, чтобы форма экспорта была в актуальном состоянии
                    $('input[name="StartDate"]').val($('#startDate').val());
                    $('input[name="EndDate"]').val($('#endDate').val());
                    $('input[name="Executor"]').val($('#executor').val());
                    $('input[name="Approver"]').val($('#approver').val());
                    $('input[name="SearchQuery"]').val($('#search').val());
                    $('input[name="SelectedDivision"]').val($('#divisionSelect').val());
                    $('input[name="UseAllDivisions"]').val($('#allDivisionsChk').is(':checked'));
                }
            });
        }

        // Установка страницы и фильтр
        function goToPage(page) {
            setCurrentPage(page);
            doAjaxFilter();
        }
        function setCurrentPage(page) {
            $('#CurrentPage').val(page);
        }

        // Обработка кнопки &laquo;Сдаточный чек&raquo;
        $('#generatePdfBtn').on('click', function() {
            // Формируем список выбранных документов.
            // Если isAutoSelectAll == true, значит ничего не ставим (пустую строку),
            // чтобы сервер понял: нужно ВСЁ.
            if (isAutoSelectAll) {
                $("#SelectedItemsOrder").val("");
            } else {
                // Собираем docId в порядке отображения (с учётом перетаскиваний)
                let arr = [];
                let rows = document.querySelectorAll("#workItemsTable tbody tr");
                rows.forEach(r => {
                    let docId = r.getAttribute("data-id");
                    if (selectedDocs.has(docId)) {
                        arr.push(docId);
                    }
                });
                $("#SelectedItemsOrder").val(JSON.stringify(arr));
            }
        });

        // Открыть модалку "Создание/редактирование заявки"
        function openRequestModal(docNumber, controller, approver, btn) {
            let tr = btn.closest('tr');
            let requestId = tr.dataset.requestId || "";
            let reqType = tr.dataset.requestType || "корр1";
            let proposed = tr.dataset.requestDate || "";
            let note = tr.dataset.requestNote || "";

            document.getElementById('hiddenDocNumber').value = docNumber;
            document.getElementById('hiddenRequestId').value = requestId;
            document.getElementById('requestTypeSelect').value = reqType;

            let proposedDateInput = document.getElementById('proposedDate');
            if (requestId) {
                proposedDateInput.value = proposed;
            } else {
                // Если заявка новая, ставим сегодняшнюю дату
                let today = new Date();
                let yyyy = today.getFullYear();
                let mm = (today.getMonth() + 1).toString().padStart(2, '0');
                let dd = today.getDate().toString().padStart(2, '0');
                proposedDateInput.value = `${yyyy}-${mm}-${dd}`;
            }
            document.getElementById('requestNote').value = note;

            let receiverSelect = document.getElementById('receiverSelect');
            receiverSelect.innerHTML = "";
            let optCtrl = document.createElement('option');
            optCtrl.value = controller;
            optCtrl.textContent = `Контролирующий (${controller})`;
            receiverSelect.appendChild(optCtrl);

            let optAppr = document.createElement('option');
            optAppr.value = approver;
            optAppr.textContent = `Принимающий (${approver})`;
            receiverSelect.appendChild(optAppr);

            if (requestId) {
                if (optCtrl.value === tr.dataset.receiver) {
                    optCtrl.selected = true;
                } else if (optAppr.value === tr.dataset.receiver) {
                    optAppr.selected = true;
                }
            } else {
                optAppr.selected = true;
            }

            if (requestId) {
                document.getElementById('createRequestBtn').style.display = 'none';
                document.getElementById('updateRequestBtn').style.display = 'inline-block';
                document.getElementById('deleteRequestBtn').style.display = 'inline-block';
            } else {
                document.getElementById('createRequestBtn').style.display = 'inline-block';
                document.getElementById('updateRequestBtn').style.display = 'none';
                document.getElementById('deleteRequestBtn').style.display = 'none';
            }

